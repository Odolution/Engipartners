<odoo>
    <template id="viewurproject" name="View Project">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form class="mt32 appointment_submit_form" t-attf-action="/viewurprojectform"  method="POST">
                          <center>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                            <h3 style="color: black;">View Your Project</h3>
                             <td style="color: black;">Select Which Project you want to see</td>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                        </center>
                               <div class="col">
                                    <div class="form-outline">
                                          <label class="" for="project_byproject">Select Project:</label>
                                <select name="project_byproject" class="form-control link style">
                                    <t t-foreach="project_byproject_rec" t-as="project">
                                        <option t-esc="project.name" t-att-value="project.id"/>

                                    </t>
                                </select>
                                    </div>
                        </div>
                          <div class="row">
                            <div class="col-8"></div>
                            <div class="col-4 my-3">


                                <button type="submit" class="btn btn-dark">SUBMIT</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
