<odoo>
    <template id="view_project" name="View Project">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form class="mt32 appointment_submit_form" t-attf-action="/inherit_doc"  method="POST">
                          <center>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                            <h3 style="color: black;">View Project</h3>
                              <p style="color:red;">Select in which project you want to add documentation</p>

                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                        </center>
                        <div class="form-group">
                              <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                          <label class="" for="project_project">Project Name:</label>
                                <select name="project_project" class="form-control link style">
                                    <t t-foreach="project_project_rec" t-as="project">
                                        <option t-esc="project.name" t-att-value="project.id"/>

                                    </t>
                                </select>
                                    </div>
                                </div>
<!--                                <div class="col">-->
<!--                                    <div class="form-outline">-->
<!--                                        <label class="" for="city">City:</label>-->
<!--                                        <input type="text" class="form-control" id="city" placeholder=""-->
<!--                                               name="city" required="1"/>-->
<!--                                    </div>-->
<!--                                </div>-->
                            </div>
                        </div>
                               <br/><br/><br/>
                     <div class="row">
                            <div class="col-9"></div>
                            <div class="col-3 my-3">


                                <button type="submit" class="btn btn-dark">SUBMIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
