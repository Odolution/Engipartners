<odoo>
    <template id="interconnection_specification" name="Interconnection Specification">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form class="mt32 appointment_submit_form" t-attf-action="/modulespecification" method="POST">

                        <center>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                            <h3 style="color: black;">Create Project Request</h3>
                            <td style="color:grey;">Please select the interconnection specifications for your project.</td>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                        </center>
                        <div class="row mb-4">
                            <div class="col">
                                    <div class="form-outline">
                                        <label class="" for="busbaarrating">Main Bus Bar Rating:</label>
                                        <input type="text" class="form-control" id="busbaarrating" placeholder=""
                                               name="busbaarrating" required="1"/>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                         <label class="" for="methodpreference">Interconnection Method Preference:</label>
                                <select name="methodpreference" class="form-control link style">
                                    <t t-foreach="method_preference_rec" t-as="method">
                                        <option t-esc="method.name" t-att-value="method.id"/>

                                    </t>
                                </select>
                                    </div>
                                </div>

                        </div>
                         <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="" for="mainbreaker">Main Breaker Rating:</label>
                                        <input type="text" class="form-control" id="mainbreaker" placeholder=""
                                               name="mainbreaker" required="1"/>
                                    </div>
                                </div>
                             </div>






                         <div class="row">
                            <div class="col-8"></div>
                            <div class="col-4 my-3">


                                <button type="submit" class="btn btn-dark">NEXT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>