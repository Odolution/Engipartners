<odoo>
    <template id="upload_documentation" name="Upload Documentation">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form class="mt32 appointment_submit_form" enctype="multipart/form-data" t-attf-action="/project_add_doc"  method="POST" >
