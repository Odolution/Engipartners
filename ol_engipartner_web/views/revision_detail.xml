<odoo>
    <template id="revision_detail" name="Submit your document">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <form class="mt32 appointment_submit_form" t-attf-action="/sub_upload_file" method="POST">

                        <center>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                            <h3 style="color: red;">Select your revision type</h3>
                            <hr style="height: 1px; border-width: 0; color: black; background-color: black;"/>
                        </center>
                         <div class="col">
                                    <div class="form-outline">
                                          <label class="" for="revision_submission">Revision Type:</label>
                                <select name="revision_submission" class="form-control link style">
                                    <t t-foreach="revision_submission_rec" t-as="revision">
                                        <option t-esc="revision.name" t-att-value="revision.id"/>

                                    </t>
                                </select>
                                    </div>
                        </div>
                          <div class="row">
                            <div class="col-8"></div>
                            <div class="col-4 my-3">


                                <button type="submit" class="btn btn-dark">SUBMIT</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>